<h1><%= current_worker.email %>'s claimed jobs:</h1>
<% current_worker.jobs.each do |job| %>
  <% if job.pending %>
  <div id="job_link_<%=job.id%>">
    <div class="well list">
      <p><%= link_to job.title, job_path(job) %></p>
      <p> <%= job.description %> </p>
      <%= link_to "Make this job active", job_path(job, mode: 'active'), :method => 'patch', remote: true  %>
    </div>
  </div>
  <% end %>
<% end %>


<div id="active_jobs">
  <% if @jobsactive.any? %>
  <h4 id="activated">Active Jobs:</h4>
  <% end %>
  <% current_worker.jobs.each do |job| %>
    <% if job.active %>
    <div id="job_link_<%=job.id%>">
    <div class="well list">
    <p><%= link_to job.title, job_path(job) %></p>
    <p><%= job.description %></p>
    <%= link_to "Mark this job as complete", job_path(job, mode: 'completed'), :method => 'patch', remote: true %>
    </div>
    </div>
    <% end %>
  <% end %>
</div>


  <div id="completed_jobs">
  <% if @jobscompleted.any? %>
  <h4 id="completed">Completed Jobs</h4>
  <% end %>
  <% current_worker.jobs.each do |job| %>
  <% if job.completed %>
  <div class="well list">
  <p><%= link_to job.title, job_path(job) %></p>
  <p><%= job.description %></p>
  </div>
  <% end %>
  <% end %>
  </div>
